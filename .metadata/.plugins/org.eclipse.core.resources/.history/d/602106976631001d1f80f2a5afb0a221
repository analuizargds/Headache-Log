		txtQtd = new JTextField();
		txtQtd.setBounds(103, 337, 106, 20);
		panel_1.add(txtQtd);
		txtQtd.setColumns(10);
		
		JComboBox<String> cmbxUnit = new JComboBox<String>();
		cmbxUnit.setBounds(222, 336, 106, 22);
		panel_1.add(cmbxUnit);
